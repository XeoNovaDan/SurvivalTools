            <li>
                <label>head</label>
                <labelUsedInLogging>false</labelUsedInLogging>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>11.6</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
    </ThingDef>

</Defs>